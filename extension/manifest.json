{
  "manifest_version": 3,
  "name": "Q&A Schema Highlighter",
  "version": "1.0",
  "description": "Highlights correct answers on certification course pages based on scraped Q&A schemas",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  
  "host_permissions": [
    "https://academy.hubspot.com/*",
    "https://skillshop.withgoogle.com/*",
    "https://www.facebookblueprint.com/*",
    "https://www.gcertificationcourse.com/*",
    "*://*/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://academy.hubspot.com/*",
        "https://skillshop.withgoogle.com/*",
        "https://www.facebookblueprint.com/*",
        "https://www.gcertificationcourse.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Q&A Schema Highlighter"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
